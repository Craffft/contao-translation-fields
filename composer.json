{
    "name": "craffft/contao-translation-fields",
    "description": "Translation fields for Contao OpenSource CMS",
    "keywords": ["translate", "translation", "fields"],
    "type": "contao-module",
    "homepage": "http://craffft.de",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Daniel Kiesel",
            "email": "daniel@craffft.de",
            "homepage": "http://daniel-kiesel.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/Craffft/contao-translation-fields/issues",
        "source": "https://github.com/Craffft/contao-translation-fields"
    },
    "require": {
        "php": ">=5.6",
        "contao/core-bundle": "^3.2 || ^4.2",
        "contao-community-alliance/composer-plugin": "^2.4.0 || 3.*"
    },
    "autoload": {
        "classmap": ["system/"]
    },
    "replace": {
        "contao-legacy/translation_fields": "*"
    },
    "extra": {
        "contao": {
            "sources": {
                "system/modules/translation-fields": "system/modules/translation-fields"
            }
        }
    }
}
